void iDraw()
{

	iClear();
	iSetColor(255,0,0);
	
	iFilledCircle(x, y, 10, 1000);
	
	iSetColor(255, 255, 255);

	iLine(100, 200, 1000, 200);
	iLine(1000, 200, 1000, 900);
	iLine(1000, 900, 100, 900);
	iLine(100, 200, 100, 900);
	

	

}





